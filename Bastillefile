ARG mailip=10.0.0.10

PKG htop nginx

#CP root /

CMD mkdir -p /www/certificates
CMD mkdir -p /usr/local/etc/git_config

MOUNT /werzel/certificates www/certificates nullfs ro 0 0
MOUNT /werzel/server_config/nginx usr/local/etc/git_config/nginx nullfs ro 0 0

# Link Configurations from /usr/local/etc/nginx/conf.d to /usr/local/etc/git_config/nginx/conf.d/
CMD rm -rf /usr/local/etc/nginx/nginx.conf
CMD ln -s /usr/local/etc/git_config/nginx/proxy.conf /usr/local/etc/nginx/nginx.conf

# Set cache folder
CMD mkdir -p /var/cache/nginx/
CMD mkdir -p /var/cache/nginx/tmp
CMD chown -R www:www /var/cache/nginx/

# Use sendmail just to forward to postfix
CMD cd /etc/mail && make
CMD cd /etc/mail && sed '/^FEATURE.*dnl/d' `hostname`.submit.mc >> submit.mc.new
CMD cd /etc/mail && echo 'FEATURE(`msp'"'"', `[${mailip}]'"'"')dnl' >> submit.mc.new
CMD cd /etc/mail && mv `hostname`.submit.mc `hostname`.submit.mc.old
CMD cd /etc/mail && mv submit.mc.new `hostname`.submit.mc
CMD cd /etc/mail && make install
SYSRC sendmail_enable=NO
SYSRC sendmail_msp_queue_enable=YES
SYSRC sendmail_outbound_enable=NO
SYSRC submit_enable=YES
CMD cd /etc/mail && make stop && make start

SYSRC nginx_enable=YES

RDR tcp 80 80
RDR tcp 443 443
RDR tcp 8443 8443
RDR udp 80 80
RDR udp 443 443
RDR udp 8443 8443

SERVICE nginx start

